{
  "name": "onlyquat-esport",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "nest build",
    "build:gateway": "nest build gateway",
    "build:core": "nest build core",
    "build:esports": "nest build esports-service",
    "start": "nest start",
    "start:gateway": "nest start gateway",
    "start:core": "nest start core",
    "start:esports": "nest start esports-service",
    "start:dev": "nest start --watch",
    "start:dev:gateway": "nest start gateway --watch",
    "start:dev:core": "nest start core --watch",
    "start:dev:esports": "nest start esports-service --watch",
    "start:all": "concurrently -n \"gw,core,esp\" -c \"blue,magenta,green\" \"pnpm run start:dev:gateway\" \"pnpm run start:dev:core\" \"pnpm run start:dev:esports\"",
    "prisma:generate": "prisma generate --config prisma.config.ts",
    "prisma:migrate": "prisma migrate dev --config prisma.config.ts",
    "prisma:migrate:deploy": "prisma migrate deploy --config prisma.config.ts",
    "prisma:migrate:status": "prisma migrate status --config prisma.config.ts",
    "prisma:migrate:reset": "prisma migrate reset --config prisma.config.ts",
    "prisma:push": "prisma db push --config prisma.config.ts",
    "prisma:pull": "prisma db pull --config prisma.config.ts",
    "prisma:seed": "prisma db seed --config prisma.config.ts",
    "prisma:studio": "prisma studio --config prisma.config.ts",
    "prisma:format": "prisma format --config prisma.config.ts",
    "prisma:validate": "prisma validate --config prisma.config.ts",
    "db:setup": "pnpm prisma:generate && pnpm prisma:migrate && pnpm prisma:seed",
    "db:fresh": "pnpm prisma:migrate:reset --force && pnpm prisma:seed",
    "db:reset": "pnpm prisma:migrate:reset",
    "db:seed:permissions": "dotenv -e .env -- npx tsx libs/common/prisma/seeds/permissions.seed.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/microservices": "^10.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-fastify": "^10.0.0",
    "@nestjs/swagger": "^11.2.6",
    "@prisma/adapter-pg": "^7.4.0",
    "@prisma/client": "^7.4.0",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^17.3.1",
    "helmet": "^8.1.0",
    "nats": "^2.19.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.18.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.0"
  },
  "prisma": {
    "seed": "npx tsx libs/common/prisma/seed.ts"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "bcrypt",
      "esbuild"
    ]
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^20.0.0",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.16.0",
    "concurrently": "^8.2.0",
    "dotenv-cli": "^7.4.4",
    "prisma": "^7.4.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}