{
  "name": "onlyquat-esport",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "nest build",
    "build:gateway": "nest build gateway",
    "build:core": "nest build core",
    "build:esports": "nest build esports-service",
    "start": "nest start",
    "start:gateway": "nest start gateway",
    "start:core": "nest start core",
    "start:esports": "nest start esports-service",
    "start:dev": "nest start --watch",
    "start:dev:gateway": "nest start gateway --watch",
    "start:dev:core": "nest start core --watch",
    "start:dev:esports": "nest start esports-service --watch",
    "start:all": "concurrently -n \"gw,core,esp\" -c \"blue,magenta,green\" \"pnpm run start:dev:gateway\" \"pnpm run start:dev:core\" \"pnpm run start:dev:esports\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:seed": "prisma db seed",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset",
    "db:setup": "pnpm prisma:generate && pnpm prisma:migrate && pnpm prisma:seed"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/microservices": "^10.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-fastify": "^10.0.0",
    "@prisma/client": "^7.4.0",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^17.3.1",
    "nats": "^2.19.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "bcrypt",
      "esbuild"
    ]
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^20.0.0",
    "@types/passport-jwt": "^4.0.1",
    "concurrently": "^8.2.0",
    "prisma": "^7.4.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
